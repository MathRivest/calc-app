{
  "private": true,
  "name": "calc-app",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev",
    "build": "preact build",
    "serve": "preact build && preact serve",
    "dev": "preact watch",
    "lint": "eslint src",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:update": "jest --updateSnapshot",
    "lambda:fx-rates": "ts-node --project lambdas/tsconfig.json lambdas/fx-rates/getFxRates.ts"
  },
  "eslintConfig": {
    "extends": "eslint-config-synacor",
    "rules": {
      "indent": [
        "error",
        2
      ],
      "comma-dangle": [
        "error",
        "always"
      ]
    }
  },
  "eslintIgnore": [
    "build/*"
  ],
  "devDependencies": {
    "@types/dotenv": "^6.1.0",
    "@types/jest": "^23.3.9",
    "@types/node-fetch": "^2.1.4",
    "dotenv": "^6.2.0",
    "eslint": "^4.9.0",
    "eslint-config-synacor": "^2.0.2",
    "identity-obj-proxy": "^3.0.0",
    "if-env": "^1.0.4",
    "install": "^0.12.2",
    "jest": "^23.3.9",
    "node-fetch": "^2.3.0",
    "npm": "^6.4.1",
    "preact-cli": "^2.2.1",
    "preact-cli-plugin-typescript": "^0.2.2",
    "preact-render-spy": "^1.2.1",
    "ts-jest": "^23.10.4",
    "ts-node": "^7.0.1"
  },
  "dependencies": {
    "preact": "^8.2.6",
    "preact-compat": "^3.17.0",
    "preact-router": "^2.5.7"
  }
}
